<p id="notice"><%= notice %></p>
<div class="show-container">
  <p>
    <strong>物件名:</strong>
    <%= @building.name %>
  </p>
  <p>
    <strong>賃料:</strong>
    <% if @building.rent.include?(',') %>
      <%= @building.rent %>
    <% else %>
      <%= @building.rent.chars.reverse.each_slice(3).map(&:join).join(',').reverse %>
    <% end %>
  </p>
  <p>
    <strong>住所:</strong>
    <%= @building.address %>
  </p>
  <p>
    <strong>築年数:</strong>
    <%= @building.age %>
  </p>
  <p>
    <strong>備考:</strong>
    <%= @building.note %>
  </p>
  <div class="station-container">
    <% number = 1 %>
    <% @stations.each do |station| %>
      <strong><%= "最寄り駅#{number}" %></strong>
      <p>
        <strong>路線名:</strong>
        <%= station.railway %>
      </p>
      <p>
        <strong>駅名:</strong>
        <%= station.name %>
      </p>
      <p>
        <strong>徒歩分数:</strong>
        <%= station.walking_time %><span>分</span>
      </p>
      <% number += 1 %>
      <br>
      <% end %>
  </div>
</div>
<%= link_to '編集', edit_building_path(@building) %> |
<%= link_to '戻る', buildings_path %>
