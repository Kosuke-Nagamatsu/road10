<p id="notice"><%= notice %></p>

<h1>Buildings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rent</th>
      <th>Address</th>
      <th>Age</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.name %></td>
        <td>
          <% if building.rent.include?(',') %>
            <%= building.rent %>
          <% else %>
            <%= building.rent.chars.reverse.each_slice(3).map(&:join).join(',').reverse %>
          <% end %>
          <span>円</span>
        </td>
        <td><%= building.address %></td>
        <td><%= building.age %><span>年</span></td>
        <td><%= building.note %></td>
        <td><%= link_to 'Show', building %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

